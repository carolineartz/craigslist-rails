<div class="row">
<div class="large-12 columns">
    <h1>Categories</h1>
</div>
</div>

<div class="row">
<div class="small-6 large-4 columns">
    <ul id="posts">
        <% @categories.each do |category| %>
            <li>
                <%= link_to category.name, category_path(category) %>
            </li>
        <% end %>
    </ul>
</div>
</div>
