<div class="row">
<div class="large-12 columns">
    <h1>Posts</h1>
</div>
</div>

<div class="row">
<div class="small-6 large-4 columns">
    <ul id="posts">
        <% @posts.each do |post| %>
            <li>
                <%= link_to post.title, post_path(post) %>
            </li>
        <% end %>
    </ul>
</div>
</div>
